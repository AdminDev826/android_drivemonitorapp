<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"

                android:background="@drawable/vehicle_bg"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal"
                android:showDividers="middle">


                <TextView
                    android:id="@+id/idtvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp"
                    android:background="#af000000"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#fff"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"

                    android:text="Registration #" />

                <EditText
                    android:id="@+id/idtvLicence"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"

                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Model" />

                <EditText
                    android:id="@+id/idtvLicenceExp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Vin" />

                <EditText
                    android:id="@+id/idtvVin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Chassis #" />

                <EditText
                    android:id="@+id/idtvchassis_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Fuel Type" />

                <Spinner
                    android:id="@+id/idtvfuel_type"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:imeOptions="actionNext"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Fuel Consumption" />

                <EditText
                    android:id="@+id/idtvnorm_avg_fuel_consumption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:divider="@drawable/vertical_divider_1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Insurance Expiry" />

                <TextView
                    android:id="@+id/idtvInsuranceExpiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:layout_marginTop="-5dp"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/abc_edit_text_material" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@drawable/vertical_divider_1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/carinfo_txt_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/pressed_state_pmy_score"
            android:gravity="center"
            android:padding="6dp"
            android:text="Edit"
            android:textColor="#fff"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/carinfo_txt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/pressed_state_pmy_score"
            android:gravity="center"
            android:padding="6dp"
            android:text="Cancel"
            android:textColor="#fff"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@drawable/vertical_divider_1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/idtvRoutineMaintinanece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/pressed_state_pmy_score"
            android:gravity="center"
            android:padding="6dp"
            android:text="Routine Maintenance"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>


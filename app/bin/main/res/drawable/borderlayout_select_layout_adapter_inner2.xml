<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>

            <gradient
                android:endColor="#fffbfb"
                android:startColor="#fffbfb"
                android:angle="270" />

            <stroke
                android:width="0.3dp"
                android:color="#a9a7a7" />

            <corners
